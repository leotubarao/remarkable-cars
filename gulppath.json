{
  "tasks": {
    "ltco_styles": {
      "srcPath": "src/styles/**/*.scss",
      "destPath": "public/styles"
    },
    "ltco_scripts": {
      "srcPath": [
        "src/scripts/**/*"
      ],
      "destPath": "public/scripts"
    },
    "ltco_plugins_styles": {
      "srcPath": [
        "node_modules/@splidejs/splide/dist/css/splide.min.css"
      ],
      "destPath": "public/styles"
    },
    "ltco_plugins_scripts": {
      "srcPath": [
        "node_modules/jquery/dist/jquery.min.js",
        "node_modules/bootstrap/dist/js/bootstrap.min.js",
        "node_modules/@splidejs/splide/dist/js/splide.min.js"
      ],
      "destPath": "public/scripts"
    },
    "ltco_images": {
      "srcPath": "src/images/**/*",
      "destPath": "public/images"
    },
    "ltco_svgs": {
      "srcPath": "src/svgs/**/*.svg",
      "destPath": "public/images/svgs"
    },
    "ltco_html": {
      "srcPath": "./src/html/**/*.html",
      "destPath": "./public"
    },
    "ltco_includes": {
      "srcPath": "./src/includes/**/*",
      "destPath": "./public/includes"
    }
  },
  "watch": {
    "ltco_styles": "./src/styles/**",
    "ltco_scripts": "./src/scripts/**",
    "ltco_images": "./src/images/**",
    "ltco_svgs": "./src/svgs/**",
    "ltco_html": "./src/html/**",
    "ltco_includes": "./src/includes/**"
  }
}
